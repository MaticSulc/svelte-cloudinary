/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
	.btn {
		@apply px-4 py-2 bg-blue-500 text-white rounded border border-blue-500 hover:bg-blue-600 hover:border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors duration-200;
	}

	.btn.outline {
		@apply bg-transparent text-blue-500 hover:bg-blue-500 hover:text-white;
	}
}
